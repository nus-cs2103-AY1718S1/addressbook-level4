<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
  <VBox alignment="CENTER_LEFT">
    <padding>
      <Insets bottom="5" left="15" right="5" top="5" />
    </padding>
    <HBox spacing="15.0" VBox.vgrow="ALWAYS">
      <children>
        <Label fx:id="id" styleClass="cell_big_label" text="\$id">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
        <Label fx:id="phone" styleClass="cell_big_label" text="\$phone" />
        <Label fx:id="address" styleClass="cell_big_label" text="\$address" />
        <Label fx:id="email" styleClass="cell_big_label" text="\$email" />
        <Label fx:id="trackingNumber" styleClass="cell_big_label" text="\$trackingNumber" />
        <Label fx:id="deliveryDate" styleClass="cell_big_label" text="\$deliveryDate" />
        <Label fx:id="status" styleClass="cell_small_label" text="\$status" />
      </children>
      <padding>
        <Insets bottom="2.0" top="5.0" />
      </padding>
    </HBox>
    <FlowPane fx:id="tags" />
  </VBox>
</HBox>
